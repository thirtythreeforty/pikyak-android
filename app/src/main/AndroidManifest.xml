<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.thirtythreeforty.pikyak" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera"
                  android:required="false" />

    <application
        android:name="net.thirtythreeforty.pikyak.PikyakApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="net.thirtythreeforty.pikyak.ConversationListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.thirtythreeforty.pikyak.ConversationDetailActivity"
            android:label="@string/title_conversation_detail"
            android:parentActivityName="net.thirtythreeforty.pikyak.ConversationListActivity" >
        </activity>
    </application>

</manifest>
